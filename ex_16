#include <stdio.h>

int main()
{
	char semn;
	int x, y;

	printf("introduceti un semn(+,-,*,/,%): ");
	scanf_s("%c", &semn);
	printf("introduceti doua numere: ");
	scanf_s("%d%d", &x, &y);

	switch (semn)
	{
	case '+':
		printf("%d+%d=%d", x, y, x + y);
		break;

	case '-':
		printf("%d-%d=%d", x, y, x - y);
		break;

	case '*':
		printf("%d*%d=%d", x, y, x * y);
		break;

	case '/':
		printf("%d/%d=%d", x, y, x / y);
		break;

	case '%':
		printf("%d%%%d = % d", x, y, x % y);
		break;
	}
}
